<Window x:Class="YourNamespace.PasswordCheckerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Проверка Пароля" Height="150" Width="300">
    <StackPanel>
        <StackPanel.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF636364"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </StackPanel.Background>
        <TextBlock Text="Введите пароль : " Margin="10" FontSize="15" FontFamily="Arial Black" HorizontalAlignment="Center"/>
        <TextBox x:Name="PasswordTextBox" Margin="10" BorderBrush="Black" Background="#FF92959A" />
        <Button Content="Проверить" Click="CheckPassword" Background="#FF91979A" BorderBrush="Black" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="Arial Black" FontSize="15" FontWeight="Bold"/>
        <TextBlock x:Name="ResultTextBlock" Margin="10"/>
    </StackPanel>
</Window>

