<Window x:Class="YourNamespace.RangeCheckerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Промежуток" Height="150" Width="300">
    <StackPanel>
        <StackPanel.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF908989" Offset="0.066"/>
                <GradientStop Color="White" Offset="1"/>
                <GradientStop Color="#FFFCFCFC" Offset="0.766"/>
            </LinearGradientBrush>
        </StackPanel.Background>
        <TextBlock Text="Введите промежуток : " Margin="10" FontSize="15" FontFamily="Arial Black"/>
        <TextBox x:Name="NumberTextBox" Margin="10" Background="#FFEDE4E4" SelectionBrush="#FF0F0F0F" SelectionTextBrush="Black" BorderBrush="#FF080808"/>
        <Button Content="Проверить" Click="CheckRange" BorderBrush="Black" Background="#FFB7B7B7" HorizontalAlignment="Center" FontSize="15" FontFamily="Arial Black"/>
        <TextBlock x:Name="ResultTextBlock" Margin="10"/>
    </StackPanel>
</Window>
